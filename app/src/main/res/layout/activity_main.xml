<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ztegesture2.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200px">
                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/train"
                    android:text="训练"
                    android:textSize="80px"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:background="@drawable/button_train_color"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="200px">
                <Button
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/getO"
                    android:background="@drawable/button_train_color"
                    android:enabled="false"
                    android:text="O"/>
                <Button
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/getV"
                    android:background="@drawable/button_train_color"
                    android:enabled="false"
                    android:text="v"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/recognition"
                android:text="识别"
                android:textSize="80px"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:background="@drawable/button_rec_color"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/Linear2"
        android:background="@drawable/button_collection_color">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/message"
            android:textSize="50px"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
